class biodata():
    def __init__(self,nama,nim,tahunangkatan):        
        print ("Silakan masukkan biodata anda")
    def input(self):
        self.nama = input("Nama: ")
        self.nim = input("NIM:  ")
        self.tahunangkatan = input("Tahun angkatan:")
         
class mahasiswa(biodata):
    def cetak(self):
        print( "Nama:  ",self.nama)
        print ("NIM:    ",self.nim)
        print ("Tanggal Lahir:  ",self.tahunangkatan)
        
 
dataMhs = mahasiswa("nama","nim","tahunangkatan")
dataMhs.input()
dataMhs.cetak()
